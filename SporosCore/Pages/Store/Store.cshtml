        </p>
        -->
    </nav>
    <div class="background">
        <div class="container">
            @foreach (var item in Model)
            {
                <div class="store-item">
                    <div class="icon" style="background-image: url(../images/@item.Item.PicPath);">
                        <p class="badge">@item.Item.Category.CategoryName</p>
                        <div class="icon-info">
                            <p class="iconProd">@item.Item.Category.CategoryName</p>
                            <p class="item-name">@item.Item.ItemName</p>
                            <p class="item-icon-desc">Категория Элита</p>
                        </div>
                        <div class="bg"></div>
                    </div>
                    <div class="info">
                        <p class="info-big-text info-text">Содержание белка: @item.Item.ProteinContent</p>
                        <p class="info-big-text info-text">Содержание масел: @item.Item.OilContent</p>
                    @if (item.Item.Category.CategoryId == 1)
                    {
                        <p class="info-big-text info-text">Сумма эффективных температур воздуха: @item.Item.Temperature</p>
                    }
                    else
                    {
                        <p class="info-big-text info-text">Содержание лизина: @item.Item.LysineContent</p>
                    }
                        <p class="info-text">Оригинатор: @item.Item.Originator.</p>
                        <a class="text-sm-center nav-link active btn" href="/Store/Item?id=@item.Item.ItemId">Подробнее</a>
                    </div>
                </div>
            }
