@model List<SporosCore.Models.ViewModels.StoreViewModel>
@{
    ViewBag.Title = "Каталог.";
    ViewBag.css = new string[4] { "storeStyle.css", "headerStyle.css", "storeCategoryStyle.css", "footerStyle.css" };
}


<div class="path">
    <p class="first-path">Главная</p>
    <div class="arrow">
        <div></div>
    </div>
    <p class="current-path">Каталог</p>
</div>
<nav class="storeCategory">
    <p class="text-sm-center nav-link active" onclick="changeCategory(event)">
        Вся продукция
    </p>
    @for (int i = 0; i < Model[0].Categories.Count; i++)
    {
        <p class="text-sm-center nav-link" onclick="changeCategory(event)">
            @Model[0].Categories.ElementAt(i).CategoryName
        </p>
    }
