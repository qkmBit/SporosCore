@using SporosCore.Models.ViewModels
@{
    Layout = null;
}
@section Script {
    Scripts.Render("~/js/jquery.validate*")
}
@model LoginViewModel
<div class="modal" id="modal" style="width: 100%; height: 100%; overflow: hidden;">
    <span class="CloseModal" onclick="AuthClose(event)"></span>
    <div class="authWindow">
        <h1>Авторизация</h1>

            @Html.AntiForgeryToken()
            <label for="phone">Электронная почта</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "profileInput", @id = "phone", @tabindex = "1", @placeholder = "Введите электронную почту" })
            @*<input type="text" id="phone" class="profileInput" placeholder="Номер телефона" tabindex="1">*@
            <label for="password">Пароль</label>
            @Html.TextBoxFor(m => m.Password, new { @class = "profileInput", @id = "password", @type = "password", @tabindex = "2", @placeholder="Введите пароль" })
            @*"<input type="text" id="password" class="profileInput" placeholder="Пароль" tabindex="2">*@
            <label for="rememberMe">Запомнить?</label>
            @Html.CheckBoxFor(m => m.RememberMe, new { @id = "rememberMe", @tabindex = "3" })
            @*<input type="checkbox" id="rememberMe" tabindex="3">*@

            <div id="errors">
                @Html.ValidationSummary(true, "")
            </div>
            <div class="authButtonContainer">
                <input type="submit" class="btnDefault" onclick="loginSubmit(event)" value="Войти">
            </div>

    </div>
</div>

